{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <th>nro</th>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
          {{#if done }}
            <a href="/task/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
          {{else}}
            <a href="/task/{{_id}}/toggleDone" class="btn btn-success">Done</a>
          {{/if}}
          <a href="/task/{{_id}}/delete" class="btn btn-danger">Delete</a>
          <a href="/task/{{_id}}/edit" class="btn btn-info">Update</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>

{{else}}
      <div class="text-center text-dark">
        <h1>No Tasks!! :c</h1>
      </div>
{{/if}}