
<div class="container">
  <div class="row">
    <div class="col-md-5">
      <form action="/task/{{ task._id }}/edit" method="post">
        <div>
        <input type="text" name="title" placeholder="Title" value="{{task.title}}"
                class="form-control rounded-2 bg-dark text-white mt-3 " />
      </div>
      <div>
        <textarea
          name="description"
          id=""
          cols="30"
          rows="10"
          placeholder="Description"
                class="form-control rounded-2 bg-dark text-white mb-3"
        >{{task.description}}</textarea>

      </div>

        <button class="btn btn-primary">update</button>
    </form>
    </div>
  </div>
</div>