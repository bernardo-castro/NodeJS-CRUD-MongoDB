<div class="card card-body-p-4 rounded-2 bg-dark text-white">

  <div class="container">
    <h3>A a task</h3>
    <div>
      <form action="/tasks/add" method="post">
        <div>
          <input
            type="text"
            name="title"
            placeholder="Title"
            class="form-control rounded-2 bg-dark text-white mt-3"
          />
        </div>
        <div>
          <textarea
            name="description"
            id=""
            cols="30"
            rows="10"
            placeholder="Description"
            class="form-control rounded-2 bg-dark text-white mt-3"
          ></textarea>

        </div>

        <button class="btn btn-primary btn-sm mt-2 mb-5">Add</button>
      </form>
    </div>

  </div>

</div>